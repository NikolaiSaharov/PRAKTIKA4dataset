<Window x:Class="PRAKTIKA4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRAKTIKA4"
        mc:Ignorable="d"
        Title="Passenger" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="115*"/>
            <RowDefinition Height="89*"/>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="87*"/>
            <RowDefinition Height="87*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="ПОИСК" x:Name="SearchClick" HorizontalAlignment="Left" Margin="293,10,0,0" VerticalAlignment="Top" Height="37" Width="82" Click="SearchClick_Click" Grid.Column="1"/>
        <Button Content="ОЧИСТИТЬ" x:Name="ClearClick" HorizontalAlignment="Left" Margin="293,52,0,0" VerticalAlignment="Top" Height="40" Width="82" Click="ClearClick_Click" Grid.Column="1"/>
        <TextBox x:Name="SearchName" HorizontalAlignment="Left" Margin="55,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="602" Height="37" Grid.ColumnSpan="2"/>
        <ComboBox x:Name="FiltrName" HorizontalAlignment="Left" Margin="55,52,0,0" VerticalAlignment="Top" Width="602" Height="40" SelectionChanged="FiltrName_SelectionChanged" Grid.ColumnSpan="2"/>
        <DataGrid x:Name="PassengerGrid" Margin="0,10,10,10" Grid.Row="1" Grid.RowSpan="3" Grid.ColumnSpan="2"/>
        <Button Content="Ticket" x:Name="TicketClick" HorizontalAlignment="Center" Margin="0,47,0,0" VerticalAlignment="Top" Height="30" Width="168" Click="Button_Click" Grid.Row="4"/>

    </Grid>
</Window>
